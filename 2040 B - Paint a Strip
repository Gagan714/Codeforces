import java.util.*;
public class Solution {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        int t = sc.nextInt();
        while (t-- > 0) {
            int index=1;
            int output=1;
            int n=sc.nextInt();
            while(index<n){
                output++;
                index=index*2;
                index+=2;
            }
            System.out.println(output);
        }
    }
}
