import java.util.*;
public class Solution{
    public static void main(String []args){
        Scanner sc=new Scanner(System.in);
        int t=sc.nextInt();
        while(t-->0){
            int a=sc.nextInt();
            int b=sc.nextInt();
            int m=Math.min(a,b);
            while(m%a!=m%b){
                m++;
            }
            System.out.println(m);
        }
    }
}
