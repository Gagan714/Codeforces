import java.util.*;
import java.lang.*;
public class Solution{
    public static void main(String []args){
        Scanner sc=new Scanner(System.in);
            int a=sc.nextInt();
            int b=sc.nextInt();
            int count=1;
            while(a!=0){
                a--;
                if(count%b==0){
                    a++;
                }
                count++;
            }
            System.out.println(count-1);
    }
}
