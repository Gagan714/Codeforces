import java.lang.*;
import java.util.*;
public class Solution{
    public static void main(String []args){
        int X=0;
        Scanner sc=new Scanner(System.in);
        int n=sc.nextInt();
        for(int i=0;i<n;i++){
            String bit=sc.next();
            if(bit.contains("+")){
                X++;
            }else{
                X--;
            }
        }
        System.out.println(X);
    }
}
